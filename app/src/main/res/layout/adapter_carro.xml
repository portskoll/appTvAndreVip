<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="2dp" android:clickable="true"
    card_view:cardBackgroundColor="@color/transparent" card_view:cardCornerRadius= "2dp"
    card_view:cardElevation="6dp" android:divider="@null"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:alpha="20">
    <!--android:layout_height="?android:attr/listPreferredItemHeight"-->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:alpha="20">

            <ImageView
                android:layout_width="@dimen/foto_peq_carro_whith"
                android:layout_height="@dimen/foto_peq_carro_higtht"
                android:id="@+id/imgcarro"
                android:layout_margin="4dp" />

            <ProgressBar
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressImg"
                android:layout_gravity="center|center_vertical" android:layout_marginRight="6dp"
                android:gravity="center|center_vertical" android:visibility="invisible"/>
        </FrameLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/f_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp" android:textColor="@color/control_highlight"
                android:text="Titulo"
                android:layout_gravity="left"
                android:layout_marginTop="3dp"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome Original"
                android:id="@+id/f_nome_original"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ano Lancamento"
                android:id="@+id/f_ano"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/red" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duraçãp"
                android:id="@+id/f_duracao"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>