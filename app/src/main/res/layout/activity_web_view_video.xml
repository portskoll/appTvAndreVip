<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_web_view_video"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.WebViewVideo">


    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/webview"
        android:layout_gravity="center_vertical|center_horizontal">


    </WebView>

    <ImageView
        android:layout_width="44dp"
        android:layout_height="38dp"
        app:srcCompat="@drawable/clickaqui"
        android:onClick="escondeMenu"
        android:id="@+id/imgBtnFullWebView" />

    <ProgressBar
    style="?android:attr/progressBarStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_x="166dp"
    android:layout_y="231dp"
    android:id="@+id/pbWebView"
        android:layout_gravity="center_vertical|center_horizontal"
        android:visibility="invisible" />

</FrameLayout>
